{
  "manifest_version": 3,
  "name": "Markkinajakauma",
  "version": "1.0",
  "action": {
    "default_title": "Markkinajakauma"
  },
  "background": {
    "service_worker": "main.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "scripting",
    "https://www.ovv.com/*"
  ],
  "host_permissions": [
    "https://script.google.com/*",
    "https://www.asuntopehtoori.fi/*",
    "https://kiinteistotahkola.fi/*",
    "https://vuokraus.rettamanagement.fi/*",
    "https://www.tsvv.fi/vuokra-asunnot/*",
    "https://op-koti.fi/*",
    "https://www.ovv.com/*",
    "https://www.kiinteistomaailma.fi/*",
    "https://vuokraovi.com/*",
    "https://oikotie.fi/*",
    "https://portaali.vuokraturva.fi/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.ovv.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
